<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
  <specVersion>
    <major>1</major>
    <minor>0</minor>
  </specVersion>
  <serviceStateTable>
	<stateVariable sendEvents="no">
      <name>LinkStatus</name>
      <dataType>string</dataType>
	  <defaultValue>"-"</defaultValue>
	  <shortCode>linkstat</shortCode>
    </stateVariable>
	<stateVariable sendEvents="yes">
      <name>CurrentActivityID</name>
      <dataType>string</dataType>
	  <defaultValue>"-"</defaultValue>
	  <shortCode>caid</shortCode>
    </stateVariable>
	<stateVariable sendEvents="no">
      <name>LastCommand</name>
      <dataType>string</dataType>
	  <defaultValue>"-"</defaultValue>
	  <shortCode>lstcmd</shortCode>
    </stateVariable>
	<stateVariable sendEvents="no">
      <name>LastCommandTime</name>
      <dataType>string</dataType>
	  <defaultValue>"-"</defaultValue>
	  <shortCode>lstcmdt</shortCode>
    </stateVariable>
	<stateVariable sendEvents="no">
      <name>PollInterval</name>
      <dataType>ui4</dataType>
	  <defaultValue>0</defaultValue>
	  <shortCode>pllint</shortCode>
    </stateVariable>
  </serviceStateTable>
  <actionList>
    <action>
		<name>StartActivity</name>
		<argumentList>
			<argument>
				<name>newActivityID</name>
				<direction>in</direction>
				<relatedStateVariable>CurrentActivityID</relatedStateVariable>
			</argument>
		</argumentList>
    </action>
    <action>
		<name>GetCurrentActivityID</name>
		<argumentList>
			<argument>
				<name>currentActivityID</name>
				<direction>out</direction>
				<relatedStateVariable>CurrentActivityID</relatedStateVariable>
			</argument>
		</argumentList>
    </action>
    <action>
		<name>SetPollInterval</name>
		<argumentList>
			<argument>
				<name>newPollInterval</name>
				<direction>in</direction>
				<relatedStateVariable>PollInterval</relatedStateVariable>
			</argument>
		</argumentList>
    </action>
    <action>
		<name>GetPollInterval</name>
		<argumentList>
			<argument>
				<name>PollInterval</name>
				<direction>out</direction>
				<relatedStateVariable>PollInterval</relatedStateVariable>
			</argument>
		</argumentList>
    </action>
    <action>
		<name>UpdateButtons</name>
    </action>
    <action>
		<name>IssueDeviceCommand</name>
		<argumentList>
			<argument>
				<name>DeviceID</name>
				<direction>in</direction>
			</argument>
			<argument>
				<name>Command</name>
				<direction>in</direction>
				<relatedStateVariable>LastCommand</relatedStateVariable>
			</argument>
			<argument>
				<name>Duration</name>
				<direction>in</direction>
			</argument>
		</argumentList>
	</action>
  </actionList>
</scpd>
